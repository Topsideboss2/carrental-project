{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@carrental/amenity": ["libs/amenity/src/index.ts"],
      "@carrental/auth": ["libs/auth/src/index.ts"],
      "@carrental/car": ["libs/car/src/index.ts"],
      "@carrental/car-amenity": ["libs/car-amenity/src/index.ts"],
      "@carrental/car-body": ["libs/car-body/src/index.ts"],
      "@carrental/car-make": ["libs/car-make/src/index.ts"],
      "@carrental/car-media": ["libs/car-media/src/index.ts"],
      "@carrental/cloudinary": ["libs/cloudinary/src/index.ts"],
      "@carrental/invoice": ["libs/invoice/src/index.ts"],
      "@carrental/mpesa": ["libs/mpesa/src/index.ts"],
      "@carrental/multer": ["libs/multer/src/index.ts"],
      "@carrental/notifications": ["libs/notifications/src/index.ts"],
      "@carrental/payment": ["libs/payment/src/index.ts"],
      "@carrental/permission": ["libs/permission/src/index.ts"],
      "@carrental/prisma": ["libs/prisma/src/index.ts"],
      "@carrental/report": ["libs/report/src/index.ts"],
      "@carrental/reservation": ["libs/reservation/src/index.ts"],
      "@carrental/role": ["libs/role/src/index.ts"],
      "@carrental/role-permission": ["libs/role-permission/src/index.ts"],
      "@carrental/constants": ["libs/constants/src/index.ts"],
      "@carrental/user": ["libs/user/src/index.ts"],
      "@carrental/user-role": ["libs/user-role/src/index.ts"],
      "@carrental/user-type": ["libs/user-type/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
